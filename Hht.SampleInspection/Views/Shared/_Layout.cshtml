<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sample Inspection</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sample Inspection", "Create", "PartsReceived", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("Parts Received", "Index", "PartsReceived")</li>

                    <li>@Html.ActionLink("Parts", "Index", "Parts")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Lookup<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Auditors", "Index", "Auditors")</li>
                            <li>@Html.ActionLink("Inspection Types", "Index", "InspectionTypes")</li>
                            <li>@Html.ActionLink("Part Categories", "Index", "PartCategories")</li>
                            <li>@Html.ActionLink("Valve Control Types", "Index", "ValveControlTypes")</li>
                            <li>@Html.ActionLink("Valve Fuel Types", "Index", "ValveFuelTypes")</li>
                            <li>@Html.ActionLink("Vendors", "Index", "Vendors")</li>
                            <li>@Html.ActionLink("Where Found", "Index", "WhereFounds")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Standard Work", "About", "Home")</li>

                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                <p class="nav navbar-text navbar-right">@User.Identity.Name</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HHT Lake City</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
